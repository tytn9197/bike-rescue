<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/create_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/core_color"
            android:textAlignment="center">


        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtReqDetailCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Mã yêu cầu: 01072020000000001"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgReqDetailShopAvatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_shop_100" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/txtReqDetailShopName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sửa xe Đức"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtReqDetailShopRatingStar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_filled_star_24"
                        android:text="4.5/5"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtReqDetailShopAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="298 Linh Trung, Phường Linh Trung, Thủ Đức, Hồ Chí Minh" />

                    <Button
                        android:id="@+id/btnReqDetailCallShop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Gọi cho cửa hàng"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="17dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtReqDetailStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="Đã gửi"
                    android:textAlignment="textEnd"
                    android:textColor="@color/core_color"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:paddingBottom="5dp"
            android:text="Chi tiết yêu cầu: "
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtReqDetailVehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/ic_baseline_error_outline_24"
            android:inputType="text"
            android:paddingTop="5dp"
            android:text=" Xe AB 2020"
            android:textColor="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/txtReqDetailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/ic_marker_24"
            android:inputType="text"
            android:paddingTop="5dp"
            android:text="10/104 A Hẻm 10 Xa Lộ Hà Nội, P. Hiệp Phú, Quận 9"
            android:textColor="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtReqDetailCreatedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
                android:paddingLeft="5dp"
                android:text="01-07-2020" />

            <TextView
                android:id="@+id/txtReqDetailCreatedTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:drawableLeft="@drawable/ic_baseline_access_time_24"
                android:text="14:25" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/txtReqDetailServiceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Vấn đề:"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txtReqDetailReqDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Thông tin thêm:"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txtReqDetailCancelReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Lý do hủy:"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:visibility="gone" />
        <!--    <TextView-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:layout_marginLeft="5dp"-->
        <!--        android:gravity="center"-->
        <!--        android:paddingBottom="5dp"-->
        <!--        android:text="Thanh toán tiền mặt"-->
        <!--        android:textColor="@color/light_red" />-->

        <TextView
            android:id="@+id/txtReqDetailFinishPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Giá: 20k "
            android:textColor="@color/black"
            android:textSize="17sp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnReqDetailTracking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border"
            android:padding="10dp"
            android:text="Xem bản đồ"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnReqDetailCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_red"
            android:gravity="center"
            android:padding="10dp"
            android:text="Hủy yêu cầu"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnComplain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/red_button_background"
            android:gravity="center"
            android:padding="10dp"
            android:text="Khiếu nại"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold"
            android:visibility="gone" />


    </LinearLayout>
</ScrollView>