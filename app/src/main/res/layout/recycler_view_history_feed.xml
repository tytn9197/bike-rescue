<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fadded_grey">

    <RelativeLayout
        android:id="@+id/feed_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="7dp"
        android:background="@drawable/border_white"
        android:orientation="vertical">

    <TextView
        android:id="@+id/txtFeedIdLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã đơn hàng: "
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="15sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txtFeedId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/imgFeed"
        android:layout_toEndOf="@+id/txtFeedIdLabel"
        android:text="123456789012345"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtFeedProblem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtFeedIdLabel"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/imgFeed"
        android:text="Xe thủng lốp"
        android:textSize="23sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgFeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:padding="3dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_shop_100" />

    <TextView
        android:id="@+id/txtFeedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtFeedProblem"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imgFeed"
        android:textColor="@color/fadded_grey"
        android:textStyle="bold"
        android:text="27/05/2019 lúc 13:00"
        android:textSize="15sp"
        />

        <TextView
            android:id="@+id/txtFeedStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/imgFeed"
            android:layout_marginEnd="13dp"
            android:textAlignment="textEnd"
            android:textColor="#5AA55F"
            android:text="-Đang xảy ra-"
            android:textSize="17dp" />
    </RelativeLayout>
</RelativeLayout>