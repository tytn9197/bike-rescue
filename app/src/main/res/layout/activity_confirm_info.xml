<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/confirm_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/core_color" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:defaultFocusHighlightEnabled="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:focusedByDefault="true"
                android:padding="5dp"
                android:screenReaderFocusable="true"
                android:text="Thông tin khách hàng"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_people_24"
                android:hint=" Họ và tên"
                android:inputType="text"
                android:paddingBottom="15dp" />

            <EditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_phone_android_22"
                android:hint=" Số điện thoại"
                android:inputType="number"
                android:paddingBottom="15dp" />

            <EditText
                android:id="@+id/edtMarker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_marker_24"
                android:hint=" Vị trí gọi yêu cầu"
                android:paddingBottom="15dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="20dp">

                <TextView
                    android:id="@+id/tvProblem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:padding="5dp"
                    android:text="Bạn gặp vấn đề gì ?"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtConfirmProblemBadge"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right|end|top"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="-5dp"
                    android:background="@drawable/badge_background"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="!"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:visibility="gone" />
            </FrameLayout>

            <EditText
                android:id="@+id/edtVanDeKhac"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_baseline_help_24"
                android:hint=" Chi tiết vấn đề"
                android:paddingBottom="15dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edtDoXang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_baseline_help_24"
                android:hint=" Giá tiền đổ xăng (Ví dụ: 20,...)"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:paddingBottom="15dp"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="Thông tin xe"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvConfirmMyBike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/border_white"
                android:drawableStart="@drawable/ic_bike_24"
                android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                android:gravity="center"
                android:padding="20dp"
                android:text="Chọn xe"
                android:textSize="16dp"
