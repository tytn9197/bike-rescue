            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="Thông tin cửa hàng"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtConfirmShopName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:drawableLeft="@drawable/ic_shop_24"
                android:enabled="false"
                android:focusable="false"
                android:hint=" Tên cửa hàng"
                android:paddingBottom="15dp" />

            <EditText
                android:id="@+id/txtConfirmShopAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:drawableLeft="@drawable/ic_shop_address_24"
                android:enabled="false"
                android:focusable="false"
                android:hint=" Địa chỉ cửa hàng"
                android:paddingBottom="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="Thông tin thêm"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtConfirmDescription"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/custom_border_text"
                android:hint="Ví dụ: xe chạy được 200km,\ngần trường ABC,..."
                android:inputType="text"
                android:padding="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="Hình ảnh thêm (nếu có):" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnImg"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    android:src="@drawable/ic_add_photo_70" />

                <HorizontalScrollView
                    android:id="@+id/image_scroll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/imageLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:padding="5dp"></LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>


            <TextView
                android:id="@+id/txtConfirmInfoPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Gia: 80k vnd"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/btnBookService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_login"
                android:gravity="center"
                android:padding="10dp"
                android:text="Yêu cầu dịch vụ"
                android:textColor="@color/white"
                android:textSize="17dp" />
