<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
   >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/send_request_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/core_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        >
        <ImageView
            android:id="@+id/send_request_toolbar_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="left"
            android:src="@drawable/ic_lessthan"/>
    </androidx.appcompat.widget.Toolbar>
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:elevation="0dp"
        android:background="@color/white"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/suaxe"
            />
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/core_color"
        app:tabBackground="@drawable/tab_color_selector"
        app:tabGravity="fill"
        app:tabMode="fixed" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/idViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">
    </androidx.viewpager.widget.ViewPager>
    <Button
        android:id="@+id/buttonHotro"
        android:layout_width="130dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Gọi Hỗ Trợ"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/border_login"
        android:drawableLeft="@drawable/phonenumber"
        android:padding="13dp"
        android:paddingRight="14dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        >
    </Button>

</LinearLayout>