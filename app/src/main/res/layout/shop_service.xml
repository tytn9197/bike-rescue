<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fadded_grey">

    <ProgressBar
        android:id="@+id/my_shop_feed_loading"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/shop_service_feed_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_white"
        android:layout_margin="4dp"
        android:orientation="vertical"
        android:padding="7dp">



        <TextView
            android:id="@+id/txtServiceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toStartOf="@+id/imgServiceFeed"
            android:text="Xe thủng lốp"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/txtCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtServiceName"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"
            android:layout_toStartOf="@+id/imgServiceFeed"
            android:text="Xe số"
            android:textSize="16sp"
            android:textStyle=""
            />
        <TextView
            android:id="@+id/txtServicePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/imgServiceFeed"
            android:layout_toEndOf="@+id/txtServicePriceLabel"
            android:layout_below="@+id/txtCategory"
            android:text="50000 VND"
            android:gravity="end"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/txtUnitLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đơn vị:"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtServicePriceLabel"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txtUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/ Lần"
            android:gravity="end"
            android:layout_below="@+id/txtServicePriceLabel"
            android:layout_toStartOf="@+id/imgServiceFeed"
            android:layout_toEndOf="@+id/txtUnitLabel"
            android:textSize="15sp"/>
        <ImageView
            android:id="@+id/imgServiceFeed"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="2dp"
            android:contentDescription="@string/app_name"
            android:padding="3dp"
            android:src="@drawable/ic_shop_100" />

        <TextView
            android:id="@+id/txtServicePriceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtCategory"
            android:layout_alignParentStart="true"
            android:text="Giá dịch vụ:"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgServiceFeed"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="13dp"
            android:text="Kích hoạt"
            android:textAlignment="textEnd"
            android:textColor="#5AA55F"
            android:textSize="17dp"
            android:textStyle="bold|italic"/>
    </RelativeLayout>
</RelativeLayout>