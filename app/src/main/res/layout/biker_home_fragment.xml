<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/homeFragmentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <fragment
        android:id="@+id/mapHome"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <Button
        android:id="@+id/btnSendRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_send_request_text"
        android:background="@color/core_color"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_anchor="@+id/mapHome"
        app:layout_anchorGravity="center|bottom"/>

    <EditText
        android:id="@+id/edtFindLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/map_edit_text_background"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:textSize="40sp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_anchor="@+id/mapHome"
        android:drawableStart="@drawable/ic_location_30px"
        android:drawablePadding="5dp"
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"
        app:layout_anchorGravity="center|top"
        />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
